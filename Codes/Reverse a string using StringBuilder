

public class Practice{

    public static void main(String[] args){
        StringBuilder sb = new StringBuilder("hrithik");
        int j=0;
        int size = sb.length();
        for(int i=sb.length()-1; i>=0; i--){
            sb.append(sb.charAt(i));
        }
        sb.delete(0, size);
        System.out.println(sb);
    }
}

